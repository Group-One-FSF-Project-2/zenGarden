<body>
  <header class='d-flex justify-content-between p-2'>
    <img src='/images/Untitled design.png' alt='Logo' class='logo ' class='logo' />

    <nav>
      <!-- <div class="login">zen garden logo -->
      <!-- <img src = "images/vecteezy_landscape-with-field-blue-sky-and-clouds-green-hill-park-or_29919103.svg" alt = "still-photo" class="still-logo"></div>   -->
      {{#if logged_in}}
      <button class="btn btn-warning" id='logout' type="button">logout</button>
      {{else}}
      <button class="btn btn-warning" type="button" data-bs-toggle="modal" data-bs-target="#modalLogin">Login</button>
      {{/if}}
    </nav>
  </header>


  <!-- Modal -->
  <div class="modal fade" id="modalLogin" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Login/Signup</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body row">
          <form class="login col-md-5 mx-2">
            <h2>Login</h2>

            <div class="form-control">
              <label for="usernameInputLogin"><i class="fa fa-envelope"></i>Username</label>
              <input type="text" id="usernameInputLogin" placeholder="Enter your username" required />
            </div>
            <div class="form-control">
              <label for="passwordInputLogin"><i class="fa fa-lock"></i>Password</label>
              <input type="password" id="passwordInputLogin" placeholder="Enter your password" required />
            </div>
            <div class="form-control-others">
              <button>LOGIN</button>
            </div>
          </form>


          <form class="registration  col-md-5 mx-2">
            <h2>Registration</h2>
            <div class="form-control">
              <label for="usernameInput"><i class="fa fa-user"></i>Username</label>
              <input type="text" id="usernameInput" placeholder="Enter your username" required />
            </div>
            <div class="form-control">
              <label for="passwordInput"><i class="fa fa-lock"></i>Password</label>
              <input type="password" id="passwordInput" placeholder="Enter your password" required />
            </div>
            <div class="form-control-others">
              <button>CREATE ACCOUNT</button>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
